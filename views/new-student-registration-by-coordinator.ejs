                    <legend><span style="color:red;"> <strong>Event Registration</strong> </span> </legend>

                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="studentfirstname"> <strong>Participating Category <span class="mandatory">*</span></strong></strong> </label>
                        <div class="custom-control custom-checkbox custom-control-inline">
                             <input type="checkbox" class="custom-control-input" name="eventRegistrationCategory" checked value="Individual" id="defaultInline1">
                             <label class="custom-control-label" for="defaultInline1">Individual</label>
                       </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                          <input type="checkbox" class="custom-control-input" name="eventRegistrationCategory" value="Group" id="defaultInline2">
                          <label class="custom-control-label" for="defaultInline2">Group</label>
                        </div>
                      </div>

                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="IndividualEventList"> <strong>Individual Events</strong> </label>
                        <select class="form-control" name="IndividualEventList" id="IndividualEventList" multiple>
                            <option >--- Select Event ---</option>

                        </select>
                      </div>
                      <div class="form-group col-md-6" id="groupEvent">
                          <label for="GroupEventList"> <strong>Group Events</strong> </label>
                          <select class="form-control" name="GroupEventList" id="GroupEventList" multiple >
                              <option >--- Select Event ---</option>

                          </select>
                      </div>
                    </div>
                    <div class="form-row" id="teamName">
                        <label for="teamMember">Team Members <span class="mandatory">*</span></strong></label>
                        <input type="text" class="form-control" name="teamMember" value="" placeholder="Enter Team Member Name In Capital Letter Sepated By Comma ( , )">
                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="coordinator"> <strong>Coordinator Name <span class="mandatory">*</span></strong></strong> </label>
                        <select name="coordinator" class="form-control">
                          <option value="<%= coordinatorId %>"> <%=loggedInUser %> </option>
                        </select>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="participationgGroup"> <strong>Participating Group <span class="mandatory">*</span></strong></strong> </label>
                        <input type="text" class="form-control" name="participationgGroup" id="participationgGroup" value="" readonly>
                      </div>

                    </div>
                    <hr>

