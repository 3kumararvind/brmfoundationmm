<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/dashboard.css">
    <%- include lib.ejs -%>
    <title>Coordinator | Register Student</title>

  </head>
  <body>
    <%- include coordinator-dashboard-menu.ejs -%>
    <%- include particle-background.ejs -%>
    <div class="container-fluid">
          <section>
            <div class="card border-primary">
              <div class="card-header bg-info text-white">
                  <h5 class="card-title text-center" >Students Registration By Coordinator </h5>
              </div>
              <div class="card-body">
                <% successMessage %>
                <% if(successMessage.length==1){ %>
                  <div class="alert alert-success">
                    <h5 class="text-center"><%= successMessage %></h5>
                  </div>
                  <% } %>

                  <% if(errorMessage.length==1){ %>
                      <div class="alert alert-danger">
                        <h5 class="text-center"><%= errorMessage %></h5>
                      </div>
                  <% } %>
                <form class="" action="/new-student-registration-by-coordinator" method="post">
                    <p class="text-danger text-center"> <strong>Note: Fields marked with * are mandatory.</strong> </p>
                  <fieldset>

                    <legend><span style="color:red;"> <strong>Student Detail:</strong> </span> </legend>

                    <div class="form-row">
                      <div class="form-group col-md-4">
                        <label for="studentfirstname"><strong>First Name <span class="mandatory">*</span> </strong> </label>
                        <input type="text" class="form-control" name="studentfirstname" id="studentfirstname" placeholder="Student first Name" required>
                      </div>
                      <div class="form-group col-md-4">
                        <label for="studentmiddletname"> <strong>Middle Name</strong> </label>
                        <input type="text" class="form-control" name="studentmiddlename" id="studentmiddlename" placeholder="Student Middle Name">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="studentlastname"> <strong>Last Name <span class="mandatory">*</span></strong> </label>
                        <input type="text" class="form-control" name="studentlastname" id="studentlastname" placeholder="Student Last Name" required>
                      </div>
                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-4">
                        <label for="studentemail"> <strong>Email</strong> </label>
                        <input type="email" class="form-control" name="studentemail" id="studentemail" placeholder="Student Email">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="studentwhatsappnumber"> <strong>WhatsApp Number</strong> </label>
                        <input type="number" class="form-control" name="studentwhatsappnumber" id="studentwhatsappnumber" placeholder="WhatsApp Number">
                      </div>
                      <div class="form-group col-md-4">
                        <label for="studentmobilenumber"> <strong>Mobile Number <span class="mandatory">*</span></strong></strong> </label>
                        <input type="number" class="form-control" name="studentmobilenumber" id="studentmobilenumber" placeholder="Mobile Number" required>
                      </div>
                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-2">
                        <label for="studentclass"> <strong>Class <span class="mandatory">*</span></strong></strong> </label>

                        <% key = Object.keys(academicClassList) %>
                        <% value = Object.values(academicClassList) %>
                        <select class="form-control" name="studentclass" id="studentclass" required>
                          <option value="" selected>---Select Class---</option>
                          <% for(i=0; i<key.length; i++){ %>
                              <option value="<%= key[i] %>"><%= value[i] %></option>
                          <%  } %>
                        </select>
                      </div>
                      <div class="form-group col-md-3">
                        <label for="studentdob"> <strong>D.O.B. (MM-DD-YYYY) <span class="mandatory">*</span></strong></strong>  </label>
                        <input type="date" class="form-control" name="studentdob" id="studentdob" required>
                      </div>
                      <div class="form-group col-md-3">
                        <label for="studentgender"> <strong>Gender <span class="mandatory">*</span></strong></strong></label>
                        <select class="form-control" name="studentgender" required>
                          <option value="">--- Select Gender  ---</option>
                          <option value="FEMALE">FEMALE</option>
                          <option value="MALE">MALE</option>
                        </select>
                      </div>
                      <div class="form-group col-md-4">
                        <label for="studentorganisation"> <strong>Organisation <span class="mandatory">*</span></strong></strong> </label>
                        <select class="form-control" name="studentorganisation" required>
                          <option value=""> --- Select Organisation --- </option>
                          <% organisationList.forEach(function(organisation){ %>
                          <option value="<%=  organisation.organisation_id %>"><%= organisation.organisation_name + ', ' + organisation.organisation_address %></option>
                          <% }) %>
                        </select>
                        <p class="text-danger"> <strong>Contact technical support team to add organisation name, if not found in list.</strong> </p>
                      </div>
                    </div>

                    <hr>
